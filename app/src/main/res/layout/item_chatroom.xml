<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="horizontal"
    android:padding="10dp">

    <!-- Basic Page back ground Color F5F8FD -->
    <ImageButton
        android:id="@+id/imagebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop = "5dp"
        android:layout_marginLeft = "5dp"
        android:background="#FFFFFF"
        android:src = "@drawable/icon_profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/chat_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:textColor="#000000"
        android:textSize="15dp"
        android:text = "0"
        android:visibility="invisible"
        android:fontFamily="@font/applesdgothicneob"
        app:layout_constraintStart_toEndOf="@+id/imagebtn"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/viewType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:textColor="#000000"
        android:textSize="15dp"
        android:text = "0"
        android:visibility="invisible"
        android:fontFamily="@font/applesdgothicneob"
        app:layout_constraintStart_toEndOf="@+id/imagebtn"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/oppo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:textColor="#000000"
        android:textSize="15dp"
        android:text = "김상엽"
        android:fontFamily="@font/applesdgothicneob"
        app:layout_constraintStart_toEndOf="@+id/imagebtn"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lastchat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="0dp"
        android:paddingBottom="5dp"
        android:textColor="#666666"
        android:text = "좋습니다. 내일부터 당장하시죠."
        android:textSize="12dp"
        android:fontFamily="@font/applesdgothicneol"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imagebtn"
        app:layout_constraintTop_toBottomOf="@+id/oppo_name"
        />

    <TextView
        android:id="@+id/regdata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="0dp"
        android:paddingBottom="5dp"
        android:textColor="#666666"
        android:text = "20220710145758"
        android:textSize="12dp"
        android:fontFamily="@font/applesdgothicneol"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toEndOf="@+id/imagebtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/oppo_name"
        />


</androidx.constraintlayout.widget.ConstraintLayout>